{
  "compilerOptions": {
  
    "target": "es2016",                 
    "module": "commonjs",
    "rootDir": "src", 
    "outDir": "./dist",
    "moduleResolution": "node",                              
    "esModuleInterop": true,  
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "forceConsistentCasingInFileNames": true,            
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./"]
    },
    "baseUrl": "src"
                                     
  }


}
